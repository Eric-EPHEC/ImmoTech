@page "/"

<PageTitle>Immotech – Accueil</PageTitle>

<section class="hero d-flex flex-column align-items-center justify-content-center text-center">
    <h1 class="display-4 mb-4">Bienvenue sur <span class="brand">Immotech</span></h1>

    <div class="search-box shadow p-4 bg-white rounded-3">
        <!-- Tabs -->
        <ul class="nav nav-tabs mb-4" id="searchTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="buy-tab" data-bs-toggle="tab" data-bs-target="#buy" type="button" role="tab">Acheter</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="rent-tab" data-bs-toggle="tab" data-bs-target="#rent" type="button" role="tab">Louer</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="estimate-tab" data-bs-toggle="tab" data-bs-target="#estimate" type="button" role="tab">Estimer</button>
            </li>
        </ul>

        <!-- Tab panes (identical layout for demo) -->
        <div class="tab-content">
            <div class="tab-pane fade show active" id="buy" role="tabpanel" aria-labelledby="buy-tab">
                @* Search form *@
                <div class="mb-3 position-relative">
                    <input class="form-control form-control-lg" placeholder="Entrez une ville ou un code postal" />
                    <span class="search-icon"><i class="bi bi-search"></i></span>
                </div>
                <a href="#" class="map-link d-block mb-3"><i class="bi bi-geo-alt me-1"></i> Ou sélectionnez les villes directement sur la carte</a>

                <div class="row g-2 mb-4">
                    <div class="col-12 col-md">
                        <select class="form-select form-select-lg">
                            <option hidden selected>Maison</option>
                            <option>Appartement</option>
                            <option>Studio</option>
                            <option>Terrain</option>
                        </select>
                    </div>
                    <div class="col-12 col-md">
                        <select class="form-select form-select-lg">
                            <option hidden selected>Prix</option>
                            <option>&lt; 250 000 €</option>
                            <option>250 000 € – 500 000 €</option>
                            <option>&gt; 500 000 €</option>
                        </select>
                    </div>
                    <div class="col-12 col-md">
                        <button class="btn btn-outline-primary w-100 h-100 py-2"><i class="bi bi-plus-lg"></i> Plus de filtres</button>
                    </div>
                </div>

                <div class="d-flex flex-column flex-md-row gap-3">
                    <button class="btn btn-success btn-lg flex-fill">Recherche dans la liste</button>
                    <button class="btn btn-outline-success btn-lg flex-fill">Recherche sur la carte</button>
                </div>
            </div>

            @* Other tabs reuse same markup for now *@
            <div class="tab-pane fade" id="rent" role="tabpanel" aria-labelledby="rent-tab">@* content omitted *@</div>
            <div class="tab-pane fade" id="ia" role="tabpanel" aria-labelledby="ia-tab">@* content omitted *@</div>
            <div class="tab-pane fade" id="estimate" role="tabpanel" aria-labelledby="estimate-tab">@* content omitted *@</div>
        </div>
    </div>
</section>
