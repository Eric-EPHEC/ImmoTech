@page "/logout"

@inject Immotech.Front.Services.TokenAuthenticationStateProvider Auth
@inject NavigationManager Nav

@code {
    /// <summary>
    /// This method is executed when the page is initialized.
    /// </summary>
    protected override async Task OnInitializedAsync()
    {
        // We call the logout method from the authentication service.
        await Auth.LogoutAsync();
        
        // We redirect the user to the home page.
        Nav.NavigateTo("/");
    }
} 